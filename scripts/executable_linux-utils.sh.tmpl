#!/usr/bin/env bash

function main {
  echo "  Adding linux utils"
}

function installPkg {
  {{ with .chezmoi.osRelease.idLike -}}
    {{- if . | regexMatch "debian" -}}
      sudo sh -c "DEBIAN_FRONTEND=noninteractive apt-get -qqy install $1" < /dev/null > /dev/null
    {{- end -}}
  {{ end }}
}

function refresh_fonts {
  fc-cache -f -v
}

main "${@}"
